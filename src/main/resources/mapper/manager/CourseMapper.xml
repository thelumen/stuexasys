<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="sunday.mapper.manager.CourseMapper">

    <!--查询课程-->
    <select id="select" parameterType="java.util.Map"
            resultType="sunday.pojo.school.Course">
        SELECT *
        FROM com_course
        <where>
            <if test="courseId != null">
                courseId=#{courseId,jdbcType=INTEGER}
            </if>
        </where>
        ORDER BY courseId ASC
    </select>

    <!--新增课程-->
    <insert id="insert" parameterType="sunday.pojo.school.Course">
        INSERT INTO com_course(courseId, name, period, credit)
         VALUES (#{courseId,jdbcType=INTEGER},#{name,jdbcType=VARCHAR},#{period,jdbcType=INTEGER},#{credit,jdbcType=INTEGER})
    </insert>

    <!--删除课程-->
    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM com_course WHERE courseId=#{courseId,jdbcType=INTEGER}
    </delete>
</mapper>