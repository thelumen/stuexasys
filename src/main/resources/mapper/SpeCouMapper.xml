<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="sunday.mapper.SpeCouMapper">
    <!--新增班级-->
    <insert id="insertSpecialty" parameterType="sunday.pojo.Specialty">
        INSERT INTO com_specialty(specialtyId,name)
        VALUES (#{specialtyId,jdbcType=CHAR},#{name,jdbcType=CHAR})
    </insert>

    <!--查询班级-->
    <select id="selectSpecialty" parameterType="java.util.Map"
            resultType="sunday.pojo.Specialty">
        SELECT *
        FROM com_specialty
        <where>
            <if test="specialtyId != null">
                specialtyId=#{specialtyId,jdbcType=CHAR}
            </if>
            <if test="name != null">
                AND name=#{name,jdbcType=CHAR}
            </if>
        </where>
    </select>
</mapper>